{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TS1 Check Domains Input",
  "type": "object",
  "additionalProperties": false,
  "required": ["tlds", "slds"],
  "properties": {
    "tlds": {
      "type": "array",
      "minItems": 1,
      "maxItems": 3,
      "items": {
        "type": "string",
        "pattern": "^\\.[a-z0-9-]{2,63}$"
      }
    },
    "slds": {
      "type": "array",
      "minItems": 1,
      "maxItems": 5000,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "pattern": "^(?!-)[a-z0-9-]{2,63}(?<!-)$"
      }
    },
    "options": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "timeout_ms": {"type": "integer", "minimum": 100, "maximum": 30000, "default": 2500},
        "max_concurrency": {"type": "integer", "minimum": 1, "maximum": 200, "default": 20},
        "batch_size": {"type": "integer", "minimum": 1, "maximum": 1000, "default": 200},
        "prefer_rdap": {"type": "boolean", "default": true},
        "enable_dns_fallback": {"type": "boolean", "default": true},
        "treat_unknown_as_available": {"type": "boolean", "default": false},
        "bootstrap_cache_path": {"type": "string", "default": ".rig_cache/rdap_dns.json"},
        "bootstrap_ttl_seconds": {"type": "integer", "minimum": 60, "default": 604800},
        "rdap_fallback_base": {"type": ["string", "null"], "pattern": "^https?://.+"},
        "deterministic_mode": {"type": "boolean", "default": false},
        "deterministic_seed": {"type": "integer", "minimum": 0, "default": 17}
      }
    }
  }
}
